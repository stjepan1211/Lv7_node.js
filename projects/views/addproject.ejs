<!doctype html>
<html>
<head>
    <title>Add project</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body         { padding-top:80px; }
    </style>
</head>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">


    <form action="/profile/addproject" method="post">
        <div class="form-group">
            <label>Naziv</label>
            <input type="text" class="form-control" name="naziv">
        </div>
        <div class="form-group">
            <label>Opis</label>
            <input type="text" class="form-control" name="opis">
        </div>
        <div class="form-group">
            <label>Cijena</label>
            <input type="number" min="0" class="form-control" name="cijena">
        </div>
        <div class="form-group">
            <label>Obavljeno</label>
            <input type="checkbox" class="form-control" name="obavljeni" value="false">
        </div>
        <div class="form-group">
            <label>Pocetak</label>
            <input type="date" class="form-control" name="pocetak">
        </div>
        <div class="form-group">
            <label>Zavrsetak</label>
            <input type="date" class="form-control" name="zavrsetak">
        </div>
        <div class="form-group">
            <label>Clanovi:</label>
                 <% for(var i=0; i < users.length; i++) { %>
                    <input type="checkbox" name="clanovi[]"  value=<%= users[i].local.email %>><%= users[i].local.email %>
                <% } %>
        </div>
        <button type="submit" class="btn btn-warning btn-lg">Dodaj</button>
    </form>

</div>
</div>
</body>
</html>
